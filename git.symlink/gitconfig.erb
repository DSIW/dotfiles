[user]
  name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[color]
  ui = auto
  status = auto
  branch = auto
  interactive = auto
  diff = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[pack]
  threads = 0
[alias]
  st = status
  cl = clone
  ci = commit
  br = branch
  co = checkout
  df = diff
  dc = diff --cached
  sm = submodule
  cp = cherry-pick
  dt = difftool

  # Log
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all

  # List
  ls = ls-files
  ign = ls-files -o -i --exclude-standard

  unstage = reset HEAD --
  last = log -1 HEAD

  # Plural
  remotes = remote -v
  branches = branch -a
  tags = tag -l
[github]
  user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
  token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
[merge]
  tool = vimdiff
[branch]
	autosetupmerge = true
[rerere]
	enabled = true
[difftool]
	prompt = false
