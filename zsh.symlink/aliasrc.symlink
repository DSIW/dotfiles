### FUNCTIONS ####{{{
function hist()
{
  eval history | awk '{print $2}'|awk 'BEGIN {FS="|"} {print $1}'|sort|uniq -c|sort -rn|head -$1
}
function uptodir() { # http://www.commandlinefu.com/commands/view/9417/jump-up-to-any-directory-above-the-current-one
  cd "${PWD/\/$@\/*//$@}"
}
