# Pacman Aliase
alias pacup='sudo yaourt -Syu'    # Synchronisiert mit den Repositories, danach Upgrade der Pakete
alias pacil='sudo yaourt -S'      # Installiert ein Paket
alias pacrm='sudo yaourt -Rns'    # De-installiert ein Paket (inklusive der Konfiguration und nicht mehr benötigter Abhängigkeiten)
alias pacio='yaourt -Si'          # Zeigt Informationen über ein installiertes Paket
alias pacs='yaourt -Ss'           # Sucht nach einem Paket in den Repositories

# safety features
alias rm='rm -iv'
alias cp='cp -irv'
alias mv='mv -iv'
alias ln='ln -i'
alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'

alias refreshzsh='source ~/.zshrc'
alias myzshrc='vim ~/.zshrc.local'

